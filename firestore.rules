rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Projects - users can read projects they're members of
    match /projects/{projectId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.members[].userId;
      allow create: if request.auth != null;
    }
    
    // Tasks - users can read/write tasks in projects they're members of
    match /tasks/{taskId} {
      allow read, write: if request.auth != null;
    }
    
    // Comments - users can read/write comments on tasks they have access to
    match /comments/{commentId} {
      allow read, write: if request.auth != null;
    }
  }
}
